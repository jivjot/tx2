CREATE OR REPLACE FUNCTION SecurityPermissionInsert(
PermissionName VARCHAR,
PermissionDescription VARCHAR,
by_user INTEGER,
ip VARCHAR,
OUT result INTEGER,
OUT rescode INTEGER
) RETURNS RECORD AS $$
DECLARE 
    temp INTEGER;
    ctid INTEGER;
BEGIN 
temp := 0;
ctid := 0;

IF EXISTS ( SELECT id FROM "Security_securitypermissions" WHERE "PermissionName"=PermissionName) THEN
	result := 2;
  	rescode := 61;
	RETURN;
END IF;

INSERT INTO "Security_securitypermissions"( "PermissionName", "PermissionDescription")
    						VALUES (PermissionName,PermissionDescription);

GET DIAGNOSTICS temp := ROW_COUNT;
IF temp <> 1 THEN 
	rescode := 62;
	result := -1;
        RETURN;
END IF;

SELECT id INTO rescode FROM "Security_securitypermissions" WHERE "PermissionName" = PermissionName;
SELECT id INTO ctid FROM django_content_type WHERE app_label='Security' AND model ='securitypermissions';

INSERT INTO "Security_securitylogs"(id, "User", "ContentType_id", "TimeStamp", ip, "Desc")
							VALUES(rescode,by_user,ctid,now(),ip,'PermissionInsert');
GET DIAGNOSTICS temp := ROW_COUNT;
IF temp <> 1 THEN 
	rescode := 999;
	result := -1;
        RETURN;
ELSE
	result := 1;
RETURN;
END IF;
END;
$$ LANGUAGE plpgsql;


